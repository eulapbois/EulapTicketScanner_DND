<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#309800">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_extralight_italic"
        android:text="Batch"
        android:textColor="@color/white"
        android:textSize="70sp" />



    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="95dp"
        android:fontFamily="@font/poppins_bold_italic"
        android:text="1999"
        android:textColor="@android:color/white"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="155dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="&quot;Pinaka Grandest&quot; Alumni Homecoming!"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        app:srcCompat="@drawable/horizontal_lines"
        android:contentDescription="TODO" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/eclippse1"
        android:contentDescription="TODO" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="432dp"
        android:layout_alignParentBottom="true"
        android:gravity="bottom">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="-45dp"
            app:cardBackgroundColor="#F2FAE9"
            app:cardCornerRadius="40dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/keyCodeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="340dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Key Code"
        android:textColor="@android:color/black"
        android:textSize="28dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/enterCodeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="385dp"
        android:fontFamily="@font/poppins_light"
        android:text="Please enter key code to proceed."
        android:textColor="@android:color/black"
        android:textSize="14sp"
        tools:ignore="HardcodedText" />


    <RelativeLayout
        android:id="@+id/layoutVerified"
        android:layout_width="match_parent"
        android:layout_height="432dp"
        android:layout_alignParentBottom="true"
        android:gravity="bottom">

        <ImageView
            android:id="@+id/verified"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_marginLeft="136dp"
            android:layout_marginTop="900dp"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/success_image" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/verified"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="100dp"
            android:fontFamily="@font/poppins_light"
            android:text="Your login verification has been "
            android:textColor="#27B924"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView8"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="-100dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/poppins_light"
            android:text="completed successfully"
            android:textColor="#27B924"
            android:textSize="18sp" />

    </RelativeLayout>



</RelativeLayout>